<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="match_parent"

        android:layout_height="380dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/materialCardView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:scaleType="centerCrop"
            android:src="@drawable/alarm" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="175dp"
            android:layout_marginRight="20dp"
            android:text=" Create Alarm Button"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="10dp"
            android:text=" By Pressing the Button,Alarm can be Created and Cancelled"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="240dp"
            android:text=" Check Current Time by looking below real digital clock " />

        <TextClock
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="275dp"
            android:format12Hour="hh:mm:ss a dd/mm/yyyy"
            android:textAlignment="center"
            android:textStyle="bold" />

        <Button
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:layout_marginTop="325dp"
            android:text="Create Alarm"
            android:layout_marginLeft="10dp"

            ></Button>


    </com.google.android.material.card.MaterialCardView>


    //next cardview

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView2"
        android:layout_width="match_parent"

        android:layout_height="325dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/alarm" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="200dp"
            android:text=" Set Alarm Time"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextClock
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="320dp" />

        <TextClock
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:format12Hour="hh:mm:ss a"
            android:layout_marginTop="240dp" />


        <Button
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="280dp"
            android:text="Cancel Alarm"

            ></Button>


    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>